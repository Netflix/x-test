{
  "name": "@netflix/x-test",
  "description": "a simple, tap-compliant test runner for the browser",
  "version": "1.0.3",
  "license": "Apache-2.0",
  "repository": "https://github.com/Netflix/x-test",
  "type": "module",
  "exports": {
    "x-test.js": "x-test.js",
    "x-test-client-puppeteer.js": "node/x-test-client-puppeteer.js",
    "x-test-client-playwright.js": "node/x-test-client-playwright.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "start": "node ./node/server.js",
    "lint": "eslint --max-warnings=0 .",
    "lint-fix": "eslint --fix .",
    "playwright:install": "playwright install --with-deps",
    "test": "npm run test:puppeteer",
    "test:puppeteer": "npm run test:puppeteer:chrome",
    "test:puppeteer:chrome": "node node/test-puppeteer-chrome.js | tap-parser -l",
    "test:playwright": "npm run test:playwright:chromium && npm run test:playwright:firefox && npm run test:playwright:webkit",
    "test:playwright:chromium": "node node/test-playwright-chromium.js | tap-parser -l",
    "test:playwright:firefox": "node node/test-playwright-firefox.js | tap-parser -l",
    "test:playwright:webkit": "node node/test-playwright-webkit.js | tap-parser -l",
    "bump": "./bump.sh"
  },
  "files": [
    "LICENSE",
    "/node/x-test-client.js",
    "/node/x-test-client-puppeteer.js",
    "/node/x-test-client-playwright.js",
    "/x-test-reporter.css.js",
    "/x-test-reporter.js",
    "/x-test-root.js",
    "/x-test-suite.js",
    "/x-test-tap.js",
    "/x-test.js"
  ],
  "dependencies": {},
  "peerDependencies": {
    "puppeteer": ">=20.0.0",
    "playwright": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "puppeteer": {
      "optional": true
    },
    "playwright": {
      "optional": true
    }
  },
  "devDependencies": {
    "eslint": "^9.20.1",
    "playwright": "^1.49.1",
    "puppeteer": "^24.2.1",
    "tap-parser": "^18.0.0"
  },
  "engines": {
    "node": ">=20.18",
    "npm": ">=10.8"
  },
  "contributors": [
    {
      "name": "Andrew Seier",
      "email": "aseier@netflix.com"
    },
    {
      "name": "Casey Klebba",
      "email": "cklebba@netflix.com"
    }
  ]
}
